/*
   Escreva em C a função VERIFICA_QUADRANTE. A função recebe um valor para x e um
   valor para y e retorna o número do quadrante (1,2,3 ou 4).
*/

#include<stdio.h>
#include<stdlib.h>
#include<conio.h>

int function(int x, int y){

    if(x>0 && y>0){

        printf("Esta localizado no quadrante:");
        return 1;
    }

    if(x>0 && y<0){

        printf("Esta localizado no quadrante:");
        return 2;
    }

    if(x<0 && y<0){

        printf("Esta localizado no quadrante:");
        return 3;
    }

    if(x<0 && y>0){

        printf("Esta localizado no quadrante:");
        return 4;
    }

    else{

        printf("Seu x ou y estao no localizados no eixo:");
        return 0;
    }
}

int main(){

    int x , y;

    printf("Insira o valor de x e y:\n");
    scanf("%d",&x);
    scanf("%d",&y);


    printf("%d",function(x,y));


}
